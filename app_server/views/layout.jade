doctype html
html
  head
    <!-- Global site tag (gtag.js) - Google Analytics -->
    script(async src="https://www.googletagmanager.com/gtag/js?id=UA-112029072-1")
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-112029072-1');
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name="description" content="K&L Photography is a New Hampshire based photography company specializing in weddings and portraits.")
    meta(charset='UTF-8')
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/main.css')
    link(rel='stylesheet', href='/stylesheets/bouncingarrow.css')
    link(href="https://fonts.googleapis.com/css?family=EB+Garamond" rel="stylesheet")
    link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.fixed-top
      a.navbar-brand.navbar-left(href='/') 
        img(src="/images/tempconst/logo.png")
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item.active
            a.nav-link(href='#')
              span.sr-only (current)
          li.nav-item
            a(href='/aboutus') About Us
          li.nav-item
            a(href='/portfolio') Portfolio
          li.nav-item.dropdown
            a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Investment
            span.caret
            ul.dropdown-menu
              li
                a(href="/investment/babies") Baby's First Year
              li
                a(href="/investment/portraits") Portraits
              li
                a(href="/investment/weddings") Weddings
          li.nav-item
            a(href='#')#contactLink Contact


    .container-fluid
      block content

      footer
        .container

          form(action="https://formspree.io/contact@theklphoto.com"
      method="POST")
            h1 Let's Get Things Started
            input(type="hidden" name="_subject" value="Contact Form Submission")
            label(for='myName') Name 
            input(type='text' name='name' id='myName')
            label(for='email') Email
            input(type='text' name='_replyto' id='email')
            label(for='select') How did you hear about us?
            select(name='howWeFound' id='select')
                option Instagram
                option Facebook
                option Friend or Family Recommendation
                option Google Search
            label(for='description' name='description') Describe what you're looking for
            textarea(name='description' id='description' rows='5' cols='50')
            button(type='submit' value='Send') Send
        .container
          .row
            .col-lg-12#socmedia
              a(href="https://www.facebook.com/Theklphoto/")
                i.fa.fa-facebook-official
              a(href="https://www.instagram.com/theklphoto/")
                i.fa.fa-instagram
              a(href="mailto:contact@theklphoto.com")
                i.fa.fa-envelope
            .col-lg-12
              h2 &copy; K&L Photography 2017
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js")
    script( language="JavaScript" type="text/javascript" src='/javascripts/jquery-3.2.1.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/javascripts/variousfrontend.js')
  
