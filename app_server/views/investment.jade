extends layout

block content
  .portContain.container
    h1= title
    .row
      each package in pricing
          .col-lg-4.col-md-6.col-sm-12.priceItem
            h3= package.title
            h5= package.price
            ul
              each item in package.includes
                li
                  span= item
            h7= package.bonus
        